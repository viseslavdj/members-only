<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'blogs/form' %>
    </div>
  </article>


<% @blogs.each do |blog| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
         <% if user_signed_in? %>
          <strong> <%= blog.user.name %> </strong><br>
          <small> @<%= blog.user.username %> </small>
          <p> <%= blog.blog %> </p>
          <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to blog, class: "level-item" do %>
              <span class="icon"><i class="fa fa-link" aria-hidden = "true"></i></span>
            <% end %>
            <%= link_to edit_blog_path(blog), class: "level-item" do %>
              <span class="icon"><i class="fa fa-pencil" aria-hidden = "true"></i></span>
            <% end %>
            <%= link_to blog, method: :delete, data: {confirm: "Are you sure?"} do %>
              <span class="icon"><i class="fa fa-trash" aria-hidden = "true"></i></span>
            <% end %>
          </div>
        </nav>
        <% else %>
          <strong> Unknown </strong><br>
          <small> @Unknown </small>
           <p> <%= blog.blog %> </p>
        <% end %>
        </div>
        <!-- Like or else -->
        
      </div>
    </article>
  </div>
<% end %>
</div>